[global]
    monitor = 0
    follow = keyboard           # Display notification on current working monitor
    transparency = 20
    indicate_hidden = yes
    shrink = yes                # Responsive notification box
    notification_height = 20
    horizontal_padding = 10     # Left and right padding
    padding = 6
    sort = yes                  # Sort message by urgency
    stack_duplicates = true
    hide_duplicate_count = false

    # Display indicators for URLs (U) and actions (A).
    show_indicators = yes

    # Frames
    frame_width = 3
    frame_color = "#aaaaaa"

    # [{width} x {height} [+/-{x} +/-{y}]]
    geometry = "350x5-15+24"

    # Formattings
    font = "System San Francisco Display Regular 10"
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left

    # Separator
    separator_color = frame
    separator_height = 3

    # Split notifications into multiple lines if they don't fit into geometry.
    word_wrap = yes

    # Browser for opening urls in context menu.
    browser = /usr/bin/firefox -new-tab

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space

[urgency_low]
    background = "#282828"
    foreground = "#928374"
    timeout = 5

[urgency_normal]
    background = "#458588"
    foreground = "#ebdbb2"
    timeout = 5

[urgency_critical]
    background = "#cc2421"
    foreground = "#ebdbb2"
    frame_color = "#fabd2f"
    timeout = 0

