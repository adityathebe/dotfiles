[global]
    monitor = 0
    follow = keyboard           # Display notification on current working monitor
    transparency = 0
    indicate_hidden = yes
    shrink = yes                # Responsive notification box
    notification_height = 25
    horizontal_padding = 10     # Left and right padding
    padding = 10
    sort = yes                  # Sort message by urgency
    stack_duplicates = true
    hide_duplicate_count = false

    # Display indicators for URLs (U) and actions (A).
    show_indicators = yes

    # Frames
    frame_width = 3
    frame_color = "#aaaaaa"

    # [{width} x {height} [+/-{x} +/-{y}]]
    geometry = "350x5-0-0"

    # Formattings
    font = "System San Francisco Display Regular 12"
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left

    # Separator
    separator_color = frame
    separator_height = 3

    # Split notifications into multiple lines if they don't fit into geometry.
    word_wrap = yes

    # Browser for opening urls in context menu.
    browser = /usr/bin/firefox -new-tab
    
    frame_color = "#c0c5ce"
    separator_color = "#c0c5ce"

    [base16_low]
        msg_urgency = low
        background = "#343d46"
        foreground = "#65737e"

    [base16_normal]
        msg_urgency = normal
        background = "#4f5b66"
        foreground = "#c0c5ce"

    [base16_critical]
        msg_urgency = critical
        background = "#bf616a"
        foreground = "#dfe1e8"