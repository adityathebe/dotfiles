[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
window-outline = #5f79aa
red = #a54242

[settings]
screenchange-reload = true

[global/wm]
;margin-top = 5
;margin-bottom = 5

############################
######## BOTTOM BAR ########
############################
[bar/bottom-bar]
bottom = true
width = 100%
height = 20
radius = 1.0
fixed-center = true
wm-restack = bspwm
separator = |

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
cursor-click = pointer
line-color = #f00
border-size = 0
border-color = #00000000
module-margin-left = 1
module-margin-right = 1
font-0 = Monospace:size=10;3
font-1 = "Font Awesome 5 Free:style=Solid:pixelsize=12;3"
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=12;3"
font-3 = "Font Awesome 5 Brands:pixelsize=12;3"
padding-left = 2
padding-right = 2
modules-left = swapfile rootfs homefs memory cpu temperature screen pulseaudio
modules-right = bandwidth ipaddress essid crypto

#########################
######## TOP BAR ########
#########################
[bar/top-bar]
# monitor = eDP-1
width = 100%
height = 30
;offset-x = 1%
;offset-y = 1%
radius = 1.0
fixed-center = true
wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

; Underline configs
line-size = 2
line-color = #f00

; Bar borders
border-size = 0
border-color = #00000000

padding-left = 0
