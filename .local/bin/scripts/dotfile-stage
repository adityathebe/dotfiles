  "$home/.config/sxhkd/sxhkdrc"
  "$home/.config/sxhkd/sxhkdrc"
  "$home/.config/tmux/tmux.conf"
  "$home/.config/wallpaper.png"
  "$home/.config/wget/wgetrc"

  # zsh
  "$home/.config/zsh/.p10k.zsh"
