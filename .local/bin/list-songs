#!/bin/bash

# I use this script with rofi to enumerate all the audio files in my muysic directory
# The selected song is played with mpc

song=$(mpc listall | rofi -dmenu -i -width 100 -location 1 -lines 31 -p "Select Song : ");
echo $song

if [ ! -z "$song" ]
then
    # Play with mpc
    mpc clear
    mpc add "$song"
    mpc play
fi

exit 1
