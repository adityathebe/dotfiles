#!/usr/bin/env sh

# This script will fetch the latest 100 repositories of the given
# Github username.
# The repo name can also be provided manually

username='adityathebe'
repo=$(
  curl -s "https://api.github.com/users/$username/repos?per_page=100" |
    jq -crM '.[] | .name' |
    rofi -dmenu -i -lines 5 -location 1 -width 100 -p "Select"
)

[ "$repo" != "" ] || exit

brave "https://www.github.com/$username/$repo"
