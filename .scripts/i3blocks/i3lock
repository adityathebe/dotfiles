#!/bin/bash
revert() {
  xset dpms 0 0 0
}
trap revert HUP INT TERM
xset +dpms dpms 0 0 5
# scrot -d 1 /tmp/locking_screen.png
# convert -blur 0x8 /tmp/locking_screen.png /tmp/screen_blur.png
# convert -composite /tmp/screen_blur.png ~/Pictures/rick-morty-lockscreen.png -gravity South -geometry -20x1200 /tmp/screen.png
i3lock -i ~/Pictures/lock-screen-i3.png
revert
